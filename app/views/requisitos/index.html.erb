<p id="notice"><%= notice %></p>

<h1>Listing Requisitos</h1>

<table>
  <thead>
    <tr>
      <th>Siglarequisito</th>
      <th>Nomerequisito</th>
      <th>Descricaorequisito</th>
      <th>Tiporequisito</th>
      <th>Prioridade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisitos.each do |requisito| %>
      <tr>
        <td><%= requisito.siglaRequisito %></td>
        <td><%= requisito.nomeRequisito %></td>
        <td><%= requisito.descricaoRequisito %></td>
        <td><%= requisito.tipoRequisito %></td>
        <td><%= requisito.prioridade %></td>
        <td><%= link_to 'Show', requisito %></td>
        <td><%= link_to 'Edit', edit_requisito_path(requisito) %></td>
        <td><%= link_to 'Destroy', requisito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

