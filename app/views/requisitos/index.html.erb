<p id="notice"><%= notice %></p>

<h1>Requisitos</h1>

<table>
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Tipo</th>
      <th>Prioridade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisitos.each do |requisito| %>
      <tr>
        <td><%= requisito.siglaRequisito %></td>
        <td><%= requisito.nomeRequisito %></td>
        <td><%= requisito.descricaoRequisito %></td>
        <td><%= requisito.tipoRequisito %></td>
        <td><%= requisito.prioridade %></td>
        <td><%= link_to 'Exibir', requisito %></td>
        <td><%= link_to 'Editar', edit_requisito_path(requisito) %></td>
        <td><%= link_to 'Excluir', requisito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Requisito', new_requisito_path %>
