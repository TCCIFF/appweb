<p id="notice"><%= notice %></p>

<h1>Regras de Negocio</h1>

<table>
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regra_negocios.each do |regra_negocio| %>
      <tr>
        <td><%= regra_negocio.siglaRegra %></td>
        <td><%= regra_negocio.nomeRegra %></td>
        <td><%= regra_negocio.descricaoRegra %></td>
        <td><%= link_to 'Exibir', regra_negocio %></td>
        <td><%= link_to 'Editar', edit_regra_negocio_path(regra_negocio) %></td>
        <td><%= link_to 'Excluir', regra_negocio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova regra de negocio', new_regra_negocio_path %>
