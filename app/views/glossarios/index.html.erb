<p id="notice"><%= notice %></p>

<h1>listagem de Glossarios</h1>

<table>
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @glossarios.each do |glossario| %>
      <tr>
        <td><%= glossario.siglaGlossario %></td>
        <td><%= glossario.descricaoGlossario %></td>
        <td><%= link_to 'Exibir', glossario %></td>
        <td><%= link_to 'Editar', edit_glossario_path(glossario) %></td>
        <td><%= link_to 'Excluir', glossario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

